
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cyber E-Commerce</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.1/dist/sweetalert2.min.css">
  <link rel="stylesheet" href="/admin/styles/login.css">
</head>
<body>

  {{!-- main container --}}
  <main class="container-fluid centered-container">
    <div class="row h-100 align-items-center justify-content-center">
      <div class="col-8 d-flex border p-0">

        {{!-- left section --}}
        <section class="w-50 d-flex align-items-center justify-content-center logo-bg">
          <div class="d-inline-flex flex-column ">
            <img class="img-fluid logo mb-2" src="/admin/images/icons/logo.svg" alt="">
            <h3 class="logo-text">ADMINS</h3>
          </div>
        </section>

        {{!-- right section --}}
        <section class="w-50 p-5 border-start">
          <form action="/admin/doLogin" method="post" class="d-flex h-100 flex-column align-items-center justify-content-center">
            
            {{#if (eq errors.status 404)}}
              <div class="msg d-flex w-100 mb-3 border border-danger p-2 justify-content-center">
                <p class="m-0 text-danger text-center">{{errors.msg}}</p>
              </div>
            {{/if}}

            <div class="w-100 mb-3">
              <h2 class="m-0">Login</h2>
              <a href="" class="forgot-pass">Forgot your password?</a>
            </div>

            <div class="w-100 mb-3">
              <input type="email" name="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" value="{{errors.mail}}" placeholder="Email">
              {{#if (eq errors.status 400)}}
                {{#if errors.email}} <span class="invalid-feedback">{{errors.email}}</span>{{/if}}
              {{/if}}
            </div>
            
            <div class="w-100 mb-3">
              <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}{{#if (eq errors.status 401)}}is-invalid{{/if}}" value="{{errors.pass}}" placeholder="Password">
              {{#if (eq errors.status 400)}}
                {{#if errors.password}}<span class="invalid-feedback">{{errors.password}}</span>{{/if}}
              {{/if}}
              {{#if (eq errors.status 401)}}
                <span class="invalid-feedback">{{errors.msg}}</span>
              {{/if}}
            </div>

            <div class="d-flex w-100 mb-4">
              <input type="checkbox" class="form-check-input" name="" id="login-check">
              <label class="ms-2 keep-logged" for="login-check">Keep me logged in</label>
            </div>

            <input type="submit" id="submit" class="btn btn-primary w-100 mb-3" value="Login">

            <p>By clicking 'Login' you agree to our website Terms & Conditions</p>

          </form>
        </section>

      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.1/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

  <script>
    let status = '{{errors.status}}';
    document.getElementById('submit').addEventListener('click', ()=> {
      if(status && status == 404){
        document.querySelector('.msg').classList.add('active')
      }
    })
    
  </script>
</body>
</html>



